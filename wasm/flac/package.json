{
  "name": "flac.wasm",
  "description": "flac executable built as WebAssembly.",
  "author": "Pig Fang <g-plane@hotmail.com>",
  "repository": "g-plane/flac.wasm",
  "version": "0.2.0",
  "license": "GPL-2.0",
  "type": "module",
  "module": "index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./index.d.ts"
    },
    "./worker": {
      "import": "./worker.js",
      "types": "./worker.d.ts"
    }
  },
  "files": [
    "flac.js",
    "flac.wasm",
    "index.d.ts",
    "index.js",
    "worker.js",
    "worker.d.ts",
    "workerized.js",
    "shared.js",
    "shared.d.ts"
  ],
  "scripts": {
    "build": "tsc -p . && rollup -c rollup.config.ts --configPlugin=swc3",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@gplane/tsconfig": "^6.0.0",
    "@swc/core": "^1.3.42",
    "@types/emscripten": "^1.39.6",
    "rollup": "^3.20.2",
    "rollup-plugin-swc3": "^0.8.1",
    "typescript": "^5.0.2"
  }
}
